{% extends 'kauth/base_nav.html' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body">
                    <a class="btn btn-primary margin" href="{% url 'assets:hostGroupForm' %}">新建</a>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover data-list" width="100%">
                        <thead>
                        <th>ID</th>
                        <th>主机组名</th>
                        <th>创建时间</th>
                        <th>操作</th>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="overlay">
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block end %}
    <script>
        $(function () {
            var draw = 1;
            var table = $(".data-list").dataTableWithDefault({
                ordering: false,
                processing: true,
                serverSide: true,
                ajax: {
                    url: "{% url 'assets:hostGroupRest' %}",
                    type: 'GET',
                    dataSrc: function (json) {
                        json.draw = draw++;
                        json.recordsTotal = json.count;
                        json.recordsFiltered = json.count;
                        json.data = json.results;
                        return json.data;
                    }
                },
                columns: [
                    {"data": "pk"},
                    {"data": "name"},
                    {"data": "createTime"},
                    {
                        "data": null, "render": function (data, type, row, meta) {
                        return '<a class="btn btn-success btn-xs btn-edit">编辑</a> ' +
                                '<a class="btn btn-danger btn-xs btn-del">删除</a> ';
                    }
                    }
                ]
            });

            $(".data-list tbody").on('click', '.btn-edit', function () {
                var data = table.api().row($(this).parents('tr')).data();
                if (isNaN(data.pk)) {
                    bootbox.alert("资源不存在！");
                    return;
                }
                window.location.href = "{% url 'assets:hostGroupForm' %}?pk=" + data.pk;
            });

            $(".data-list tbody").on('click', '.btn-del', function () {
                var data = table.api().row($(this).parents('tr')).data();
                if (isNaN(data.pk)) {
                    bootbox.alert("资源不存在！");
                    return;
                }
                bootbox.confirm({
                    title: "删除",
                    message: "确认删除?",
                    callback: function (result) {
                        if (result) {
                            $.ajaxWithDialog("{% url 'assets:hostGroupRest' %}", 'DELETE', {
                                "pk": data.pk,
                            }, function (data) {
                                table.api().ajax.reload(null, false);
                            }, false);
                        }
                    }
                });
            })

        });
    </script>
{% endblock %}