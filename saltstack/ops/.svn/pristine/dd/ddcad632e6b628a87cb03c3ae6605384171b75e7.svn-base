{% extends 'kauth/base_nav.html' %}
{% block breadcrumb %}
    <small>历史执行</small>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-block" onclick="window.history.back();">
                <span class="pull-left"><i class="fa fa-chevron-left"></i> 返 回</span>
            </button>
        </div>
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover data-list" width="100%">
                        <thead>
                        <th>执行时间</th>
                        <th>服务名称</th>
                        <th>异步任务ID</th>
                        <th>命令</th>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="overlay">
                    <i class="fa fa-spinner fa-spin"></i>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="modalResult" tabindex="-1" role="dialog" aria-hidden="true"
         style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h3>执行结果</h3>
                </div>
                <div class="modal-body">
                    <textarea id="result" class="shell" style="width: 100%;height: 350px;" readonly></textarea>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block end %}
    <script>
        $(function () {
            var draw = 1;
            var table = $(".data-list").dataTableWithDefault({
                ordering: false,
                processing: true,
                serverSide: true,
                ajax: {
                    url: "{% url 'service:serviceJobRest' %}",
                    type: 'GET',
                    dataSrc: function (json) {
                        json.draw = draw++;
                        json.recordsTotal = json.count;
                        json.recordsFiltered = json.count;
                        json.data = json.results;
                        return json.data;
                    }
                },
                columns: [
                    {"data": "createTime"},
                    {"data": "service.name"},
                    {"data": "jid"},
                    {
                        "data": "state.fun", "render": function (data, type, row, meta) {
                        if (row.result != null && row.result != "" && row.result != "{}") {
                            return '<code class="text-green btn-query" style="cursor:pointer;">' + data + '</code> ';
                        } else {
                            return '<code class="text-danger btn-query" style="cursor:pointer;">' + data + '</code> ';
                        }
                    }
                    }
                ]
            });

            $(".data-list tbody").on('click', '.btn-query', function () {
                var data = table.api().row($(this).parents('tr')).data();
                if (isNaN(data.id)) {
                    bootbox.alert("资源不存在！");
                    return;
                }
                $.ajaxWithDialog("{% url 'service:serviceJobResult' %}", "GET", {"id": data.id}, function (result) {
                    if (result['errno'] != 0) {
                        return;
                    }
                    var data = result['data'];
                    var content = "";
                    if (data && !$.isEmptyObject(data)) {
                        if (typeof data == "object") {
                            for (var k in data) {
                                var v = data[k]['return'];
                                if (typeof v != 'object') {
                                    content += "\n" + k + ":\n" + v;
                                } else {
                                    content += "\n" + k + ":\n" + formatJson(v, true);
                                }
                            }
                        } else if (typeof data == "string") {
                            content += data;
                        } else {
                            content += " unknown return";
                        }
                        $("#result").val(content);
                    }
                    $("#modalResult").modal('show');
                }, false);
            });
        });
    </script>
{% endblock %}